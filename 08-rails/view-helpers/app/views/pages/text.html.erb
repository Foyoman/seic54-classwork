<h1>Text Helpers</h1>

<ul>
    <% @numbers.each do |n| %>
        <li style="background-color: <%= cycle 'pink', 'lavender', 'coral', 'lightblue' %>">
            <%= n %>
        </li>
    <% end %>
</ul>

<p title="<%= @story %>">
    <%= truncate @story, :length => 30 %>
</p>

<p>
    <%= pluralize @friend_count, 'friend' %>
</p>

<p>
    <%= pluralize @enemy_count, 'enemy' %> 
</p>